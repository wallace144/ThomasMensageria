<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    tools:context="co.udistrital.android.thomasmensageria.main.MainActivity">



    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:id="@+id/imageObtenerRuta"
            android:layout_width="68dp"
            android:layout_height="160dp"
            android:src="@drawable/obtenerRuta"
            android:layout_centerHorizontal="true"
            android:paddingTop="50dp"
            android:layout_above="@+id/imageValidarRuta" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="prueba"/>


        <ImageView
            android:id="@+id/imageValidarRuta"
            android:layout_width="68dp"
            android:layout_height="160dp"
            android:src="@drawable/validarRuta"
            android:layout_centerHorizontal="true"
            android:paddingTop="50dp"
            android:layout_above="@+id/imageRutaServicios" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="prueba"/>

        <ImageView
            android:id="@+id/imageRutaServicios"
            android:layout_width="68dp"
            android:layout_height="160dp"
            android:src="@drawable/rutaServicio"
            android:layout_centerHorizontal="true"
            android:paddingTop="50dp"
            />
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageView
            android:id="@+id/imageResumenRuta"
            android:layout_width="68dp"
            android:layout_height="160dp"
            android:src="@drawable/resumenRuta"
            android:layout_centerHorizontal="true"
            android:paddingTop="50dp"
            android:layout_above="@+id/imageValidarRuta" />

        <ImageView
            android:id="@+id/imageCierreRuta"
            android:layout_width="68dp"
            android:layout_height="160dp"
            android:src="@drawable/cierreRuta"
            android:layout_centerHorizontal="true"
            android:paddingTop="50dp"
            android:layout_above="@+id/imageRutaServicios" />


    </LinearLayout>




</LinearLayout>

