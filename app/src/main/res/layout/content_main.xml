<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:paddingTop="30dp"
    tools:context="co.udistrital.android.thomasmensageria.main.ui.MainActivity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/linearObtenerRuta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/imageObtenerRuta"
                android:layout_width="@dimen/icon_menu_width"
                android:layout_height="@dimen/icon_menu_height"
                android:src="@drawable/obtener_ruta"
                android:layout_centerHorizontal="true"
                android:paddingTop="50dp"
                android:layout_above="@+id/imageValidarRuta" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="@string/menu.icon.get.route"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearValidarRuta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/imageValidarRuta"
                android:layout_width="@dimen/icon_menu_width"
                android:layout_height="@dimen/icon_menu_height"
                android:src="@drawable/validar_ruta"
                android:layout_centerHorizontal="true"
                android:paddingTop="50dp"
                android:layout_above="@+id/imageRutaServicios" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="@string/menu.icon.validate.route"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearRutaServicios"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/imageRutaServicios"
                android:layout_width="@dimen/icon_menu_width"
                android:layout_height="@dimen/icon_menu_height"
                android:src="@drawable/ruta_servicio"
                android:layout_centerHorizontal="true"
                android:paddingTop="50dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="@string/menu.icon.services.route"/>/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/linearResumenRuta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/imageResumenRuta"
                android:layout_width="@dimen/icon_menu_width"
                android:layout_height="@dimen/icon_menu_height"
                android:src="@drawable/resumen_ruta"
                android:layout_centerHorizontal="true"
                android:paddingTop="50dp"
                android:layout_above="@+id/imageValidarRuta" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="@string/menu.icon.summary.route"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearCierreRuta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/imageCierreRuta"
                android:layout_width="@dimen/icon_menu_width"
                android:layout_height="@dimen/icon_menu_height"
                android:src="@drawable/close_route"
                android:layout_centerHorizontal="true"
                android:paddingTop="50dp"
                android:layout_above="@+id/imageRutaServicios" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="@string/menu.icon.close.route"/>
        </LinearLayout>


    </LinearLayout>




</LinearLayout>

